@model IEnumerable<TeploServices.Models.Service>


<section class="hero-wrap hero-wrap-2" style="background-image: url(@Url.Content("~/Content/images/bg_1.jpg"));" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread">Услуги</h1>
                <p class="breadcrumbs"><span class="mr-2"><a href="/">Главная <i class="ion-ios-arrow-forward"></i></a></span> <span>Услуги <i class="ion-ios-arrow-forward"></i></span></p>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-no-pt ftco-no-pb">
    <div class="container-fluid p-0">
        <div class="row no-gutters">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-3 ftco-animate">
                    <div class="project">
                        <img  src=@Url.Content("~/Resourses/"+@item.Photo+"") width="1000" height="600" alt="@item.Photo class="rounded"">
                        <div class="text">
                            <span>@item.Name</span>
                            <h3><a href="project.html">  @Html.ActionLink("От - "+ @item.Price + "", "Details", new { id = item.ServiceId })</a></h3>
                        </div>
                        <a href="@Url.Content("~/Resourses/"+@item.Photo+"")" class="icon image-popup d-flex justify-content-center align-items-center">
                            <span class="icon-expand"></span>
                        </a>
                    </div>
                </div>
            }
            </div>
    </div>
</section>
