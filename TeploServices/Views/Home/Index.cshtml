@model IEnumerable<TeploServices.Models.Review>


<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-2">
            <div class="col-md-8 text-center heading-section ftco-animate">

                <h2 class="mb-4">Недавние отзывы</h2>

            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 ftco-animate">
                    <div class="blog-entry">
                        <div class="meta-date text-center col-9">
                            <span class="day">@item.Date.Value.Day</span>
                            <h3 class="heading">@item.Date.Value.ToString("MMMM") </h3>
                            <span class="yr">@item.Date.Value.Year</span>
                        </div>

                        <div class="text pt-4">
                            <h3 class="heading">@item.SNP</h3>
                            <p>@item.Text</p>

                        </div>
                    </div>
                </div>
            }

            </div>
    </div>
</section>