    <h4>Услуга</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Тип услуги")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type.Name)
        </dd>

        <dt>
            @Html.DisplayName("Услуга")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
